import os
import zipfile
import pandas as pd

# Path to the data folder and zip file
data_folder = 'data/'
zip_file = 'data.zip'

# Check if the data folder exists
if not os.path.exists(data_folder):
    print(f"'{data_folder}' folder not found. Unzipping '{zip_file}'...")

    # Unzip data.zip if the data folder is missing
    with zipfile.ZipFile(zip_file, 'r') as zip_ref:
        zip_ref.extractall(data_folder)
    print(f"'{zip_file}' has been unzipped to '{data_folder}'.")

# Import goodreads dataset
books_goodreads = pd.read_csv('data/books.csv', sep=',', header=0)
print("Goodreads dataset loaded as books_goodreads")





